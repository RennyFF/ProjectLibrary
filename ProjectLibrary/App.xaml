<Application
    x:Class="ProjectLibrary.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ProjectLibrary"
    xmlns:view="clr-namespace:ProjectLibrary.MVVM.View"
    xmlns:viewModel="clr-namespace:ProjectLibrary.MVVM.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ResourceColors.xaml" />
                <ResourceDictionary Source="/Styles/ResourceElementStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:AuthViewModel}">
                <view:AuthView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:RegViewModel}">
                <view:RegView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:LibraryViewModel}">
                <view:LibraryView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DialogWindowViewModel}">
                <view:DialogWindow />
            </DataTemplate>

            <FontFamily x:Key="Inter">pack://application:,,,/Resources/Font/#Inter</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
