<UserControl
    x:Class="ProjectLibrary.MVVM.View.LibraryViews.CatalogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customComponents="clr-namespace:ProjectLibrary.Utils.Components.CustomView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLibrary.MVVM.View.LibraryViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="10"
            VerticalAlignment="Center"
            Background="{StaticResource MainBackgroundColorBrush}"
            CornerRadius="16">
            <Grid VerticalAlignment="Center">
                <TextBlock
                    Margin="20,10,0,10"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Style="{StaticResource HeaderTextStyle}"
                    Text="Каталог" />
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Margin="0,0,30,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="8,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Style="{StaticResource SimpleTextStyleGray}"
                    Text="Сортировка:" />

                <ComboBox
                    x:Name="SortComboBox"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    SelectedIndex="0"
                    Style="{StaticResource FlatComboBoxStyle1}">
                    <ComboBoxItem Content="По актуальности" />
                    <ComboBoxItem Content="По названию" />
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Style="{StaticResource SimpleTextStyleGray}"
                    Text="Жанр:" />
                <ComboBox
                    x:Name="GenreComboBox"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    DisplayMemberPath="GenreName"
                    ItemsSource="{Binding AllGenresFilter}"
                    Style="{StaticResource FlatComboBoxStyle1}" />
            </StackPanel>
        </Grid>
        <ScrollViewer
            Grid.Row="2"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            VerticalScrollBarVisibility="Auto">
            <WrapPanel>
                <customComponents:BookCard
                    Title="Brave"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/brave.png" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Brave"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/brave.png" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Brave"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/brave.png" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Brave"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/brave.png" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Brave"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/brave.png" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
                <customComponents:BookCard
                    Title="Fortnite"
                    Margin="0,0,20,0"
                    ImageSource="../Resources/fortnite.jpg" />
            </WrapPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="3">
            <TextBlock
                FontSize="32"
                Foreground="Wheat"
                Text="1 страница" />
        </StackPanel>
    </Grid>
</UserControl>
